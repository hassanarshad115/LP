<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wlpr"
    tools:context=".MyDiscovere">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toobarMyCource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="#fff" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_marginTop="70sp"
                android:layout_gravity="left"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="Featured"
                android:textAllCaps="false"
                android:textColor="#fff" />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:id="@+id/programmingListinDiscover"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <Button
                android:layout_width="140dp"
                android:layout_marginTop="6dp"
                android:layout_gravity="left"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_second"
                android:text="@string/artsandhumanities"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="#fff" />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:id="@+id/programmingListinDiscoverSecond"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>